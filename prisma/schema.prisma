generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  UUID      String @id @default(uuid(7))
  firstName String
  lastName  String
  email     String @unique
  password  String

  // Groupes dont l'utilisateur est membre
  groups Groups[] @relation("UserGroups")

  // Groupes que l'utilisateur poss√®de
  ownedGroups Groups[] @relation("GroupOwner")
}

model Groups {
  UUID String @id @default(uuid(7))
  name String

  // Owner du groupe
  ownerId String
  owner   Users  @relation("GroupOwner", fields: [ownerId], references: [UUID])

  // Users membres
  users     Users[]    @relation("UserGroups")
  GroupCode GroupCode?
}

model GroupCode {
  UUID    String @id @default(uuid(7))
  code    String @unique // le code du groupe
  group   Groups @relation(fields: [groupId], references: [UUID])
  groupId String @unique // un code = un groupe
}
